root = true

# Works together with .prettierrc
# When something is configured here and in .prettierrc -> .prettierrc takes priority!

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 100

[*.{js,jsx,ts,tsx}]
max_line_length = 140
